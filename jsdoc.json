{
  "tags": {
    "allowUnknownTags": true
  },
  "source": {
    "include": "src",
    "includePattern": ".+\\.js(doc)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "plugins": [ "plugins/markdown" ],
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false
  },
  "opts": {
    "recurse": true,
    "encoding": "utf8",
    "destination": "../mesh-docs/api/current"
  }
}
